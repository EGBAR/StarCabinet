{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "target": "es2015",
    "types": ["node", "electron", "react"],
    "typeRoots": [
      "node_modules/@types",
      "typings/globals",
      "typings/modules"
    ]
  },
  "exclude": [
    "node_modules",
    "typings"
  ]
}
